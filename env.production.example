# Production Environment Variables for Docker Deployment
# Bu faylı .env olaraq kopyalayın və real dəyərləri daxil edin

# Django Security
SECRET_KEY=your-super-secret-production-key-here-change-this-immediately
DEBUG=False

# Database Configuration
DB_NAME=faziletkitab_prod
DB_USER=faziletkitab
DB_PASSWORD=your-super-secure-database-password-change-this
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your-redis-password-change-this

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password-change-this
DEFAULT_FROM_EMAIL=your-email@gmail.com
ADMIN_EMAIL=admin@dostumkitab.az

# ImageKit Configuration
IMAGEKIT_ENABLED=True
IMAGEKIT_PUBLIC_KEY=your-imagekit-public-key-change-this
IMAGEKIT_PRIVATE_KEY=your-imagekit-private-key-change-this
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your-endpoint-change-this
IMAGEKIT_FOLDER=dostumkitab

# Production Domain
ALLOWED_HOSTS=dostumkitab.az,www.dostumkitab.az,localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=https://dostumkitab.az,https://www.dostumkitab.az

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/django/kitab_backend.log 